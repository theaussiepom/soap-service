{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "commonjs",
    "outDir": "../dist",
    "sourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../vendor/definitions"
    ]
  },
  "exclude": [],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
