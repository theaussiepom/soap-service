{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "../dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es2017",
    "lib": ["es2017"],
    "typeRoots": [
      "../node_modules/@types",
      "../vendor/definitions"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
